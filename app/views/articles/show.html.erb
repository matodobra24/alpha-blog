<h2 align="center"><%= @article.title %> </h2>

<div class="well center col-xs-8 col-xs-offset-2">
    <h4 class="description"><strong>Description:</strong></h4>
        <hr>
        <p class="lead"><%= simple_format(@article.description) %> </p>
        <div class="article-actions">
            <%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-xs btn-success"%> |
            <%= link_to "Delete Article", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %> |
            <%= link_to "View Articles", article_path, class: "btn btn-xs btn-primary" %>
        </div>
</div>
    