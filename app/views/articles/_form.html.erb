<div class="col-md-12">

<% if @article.errors.any? %>
<h2>The Following Errors Prevented The Article From Being Created</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

 <!--Need to initiate @article in Articles Controller else page wont know what @articles is!!! -->
<%= form_for(@article, :html => {class: 'form-horizontal', role: 'form'})  do |f| %>
    <div class="form-group">
        <div class="col-xs-2 control-label">
            <%= f.label :title %>
        </div>
        <div class="col-xs-10">
            <%= f.text_field :title, class: 'form-control', placeholder: 'Title of Article', autofocus: true %>
        </div>
    </div>
 <div class="form-group">
        <div class="col-xs-2 control-label">
            <%= f.label :description %><br>
        </div>
        <div class="col-xs-10">
            <%= f.text_area :description, rows: 10, class:'form-control', placeholder: 'Article Content', autofocus: true %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-4">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
            <%= link_to "Cancel Article", articles_path, class: 'btn btn-danger text-center btn-lg'%>
        </div>
    </div>

<% end %>
    
</div>
